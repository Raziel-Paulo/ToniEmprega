@* Views/Empresa/Dashboard.cshtml *@
@model IEnumerable<ToniEmprega.Models.Oferta>
@{
    ViewData["Title"] = "Dashboard Empresa";
}

<div class="dashboard-grid">
    <aside class="sidebar">
        <h3 style="color: #1E90FF;"><i class="fas fa-building"></i> Menu</h3>
        <ul class="sidebar-menu">
            <li><a href="/Empresa/Dashboard" class="sidebar-link active"><i class="fas fa-home"></i> Dashboard</a></li>
            <li><a href="/Empresa/CriarOferta" class="sidebar-link"><i class="fas fa-plus"></i> Nova Oferta</a></li>
        </ul>
    </aside>

    <div>
        <h2 style="color: #1E90FF;">Painel da Empresa</h2>

        <div class="stats-grid">
            <div class="stat-card">
                <span class="stat-number">@ViewBag.TotalOfertas</span>
                <span class="stat-label">Total Ofertas</span>
            </div>
            <div class="stat-card">
                <span class="stat-number">@ViewBag.OfertasAtivas</span>
                <span class="stat-label">Ativas</span>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ofertas Recentes</h3>
                <a href="/Empresa/CriarOferta" class="btn btn-primary"><i class="fas fa-plus"></i> Nova</a>
            </div>
        </div>
    </div>
</div>